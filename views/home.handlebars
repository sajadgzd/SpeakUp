<form style="color: white">
  {{#if user}}
    <div class="form login-form">
      <p>Logged in as <strong>{{user.username}}</strong></p>
      <div class="buttons">
        <a class="button logout" href="#">Logout</a>
        <a class="button logout" href="/">Home Page</a>
      </div>
    </div>
  {{else}}
    <div class="form login-form">
      <input type="text" name="username" placeholder="username" style="color: white;">
      <input type="text" name="password" placeholder="password" style="color: white;">
      <div class="buttons">
        <button class="button login">Login</button>
        <a class="button signup" href="/register">Signup</a>
      </div>
    </div>
    <div class="form signup-form">
      <input type="text" name="username" placeholder="username" style="color: white;">
      <input type="text" name="email" placeholder="email" style="color: white;">
      <input type="text" name="password" placeholder="password" style="color: white;">
      <div class="buttons">
        <a class="button login" href="/">Login</a>
        <button class="button signup">Signup</button>
      </div>
    </div>
  {{/if}}
</form>
